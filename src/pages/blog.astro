---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
const allPosts = await Astro.glob("../pages/posts/*.md");
const title = "The RethinkID Blog";
---

<BaseLayout title={title}>
  <div class="mx-auto max-w-full px-4 md:max-w-4xl xl:max-w-7xl">
    <h1 class="py-16 text-center text-6xl font-bold">{title}</h1>
    <ul
      class="grid justify-items-center gap-x-4 gap-y-8 pb-16 md:grid-cols-2 xl:grid-cols-3"
    >
      {
        allPosts.map((post) => (
          <li>
            <BlogPost
              url={post.url || ""}
              title={post.frontmatter.title}
              pubDate={post.frontmatter.pubDate}
              description={post.frontmatter.description}
              image={{
                url: post.frontmatter.image.url,
                alt: post.frontmatter.image.alt,
              }}
              author={post.frontmatter.author}
            />
          </li>
        ))
      }
    </ul>
  </div>
</BaseLayout>
