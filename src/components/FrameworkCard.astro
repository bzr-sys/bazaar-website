---
type Props = {
  url: string;
  linkTitle: string;
};

const { url, linkTitle } = Astro.props;
---

<div class="card bg-base-200 transition-all">
  <div class="card-body justify-between">
    <div class="mx-auto py-8">
      <slot name="icon" />
    </div>
    <div class="card-actions justify-end pt-8">
      <a
        href={url}
        class="stretched-link btn btn-outline btn-sm focus:active:transform-none"
      >
        {linkTitle} &rarr;
      </a>
    </div>
  </div>
</div>

<style is:global>
  .card:hover .glow {
    opacity: 1;
    filter: drop-shadow(0px 0px 6px #db9a59);
  }
</style>
