---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script
      is:inline
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-X26XYQ6XR9"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-X26XYQ6XR9");
    </script>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Bazaar is a zero-running-cost backend-as-a-service platform for building awesome single-page-apps."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="icon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Bazaar</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
